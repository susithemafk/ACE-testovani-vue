{
    "name": "testovaci-aplikace-vue",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "vite --port 5173",
        "build": "vue-tsc --noEmit && vite build",
        "preview": "vite preview",
        "test:unit": "jest --verbose ./test",
        "test:e2e": "cypress open",
        "test:e2e:run-all": "cypress run",
        "sass": "sass src/assets/styles/main.scss src/assets/styles/main.css",
        "sass:watch": "sass --watch src/assets/styles/main.scss src/assets/styles/main.css"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ],
        "plugins": [
            "@babel/plugin-transform-runtime"
        ]
    },
    "jest": {
        "testEnvironment": "jsdom",
        "testEnvironmentOptions": {
            "customExportConditions": [
                "node",
                "node-addons"
            ]
        },
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.vue$": "@vue/vue3-jest"
        }
    },
    "devDependencies": {
        "@babel/plugin-transform-runtime": "^7.24.0",
        "@babel/preset-env": "^7.24.0",
        "@vue/test-utils": "^2.4.0-alpha.2",
        "@vue/vue3-jest": "^29.2.6",
        "autoprefixer": "^10.4.18",
        "babel-core": "^7.0.0-bridge.0",
        "cypress": "^13.7.0",
        "dotenv": "^16.4.5",
        "jest": "^29.7.0",
        "postcss": "^8.4.36",
        "start-server-and-test": "^2.0.3",
        "tailwindcss": "^3.4.1",
        "vite": "^5.1.6",
        "vue-tsc": "^1.8.27"
    },
    "dependencies": {
        "@types/jest": "^29.5.12",
        "@vitejs/plugin-vue": "^5.0.4",
        "jest-environment-jsdom": "^29.7.0",
        "postcss-import": "^16.0.1",
        "primevue": "^3.50.0",
        "sass": "^1.72.0",
        "vue": "^3.4.21"
    }
}
